extends ../../layout.jade

block content
  .card.card__patchpanels.mdl-card.mdl-shadow--4dp
    .mdl-card__title
      h2.mdl-card__title-text #{title}
    .mdl-card__supporting-text
      form(action='', method='POST')
        if padetail
          .patch__add-form
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='text', pattern='-?[0-9]*(\.[0-9]+)?', autocomplete='off', value='#{padetail.node}', name='node', id='node')
              label.mdl-textfield__label(for='node') Node
              span.mdl-textfield__error Input is not a number!
            .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
              input.mdl-textfield__input(type='text', pattern='-?[0-9]*(\.[0-9]+)?', autocomplete='off', value='#{padetail.panel}', name='panel', id='panel')
