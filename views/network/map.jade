extends ../layout.jade

block content
  .card.card__table.mdl-card.mdl-shadow--4dp
    .mdl-card__title
      h2.mdl-card__title-text Network Map
    .mdl-card__media
      table.mdl-data-table.mdl-js-data-table
        thead
          tr
            th Switch
            th Patch
            th Location
            th Edit
        tbody
          - each item in patch
            - each port in item.port
              tr
                td 101#{port.name}/#{port.port}a42
                td Node <strong>#{item.node}</strong>, Panel <strong>#{item.panel}</strong>, Port <strong>#{port.num}</strong>
                td #{port.dest}
                td
                  a.mdl-button.mdl-js-button.mdl-button--icon(href='/network/patch/#{item.node}/#{item.panel}/#{port.num}')
                    i.material-icons settings
                    
    .mdl-card__menu
      a.mdl-button.mdl-js-button.mdl-button--icon(href='/network/patch/add')
          i.material-icons add
